@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container text-center">
    <h2 class="mb-4">Hệ thống quản lý giảng viên</h2>
    @if (User.Identity.IsAuthenticated)
    {
        <div>
            <span>Xin chào, @User.Identity.Name!</span>
            <a href="@Url.Action("Logout", "Login")" class="btn btn-danger ms-3">Đăng xuất</a>
        </div>
    }

    <div class="row">
        <div class="col-md-3 mb-3">
            <a href="@Url.Action("profile", "Student")" class="menu-item">
                <img src="~/images/student_info.png" alt="Thông tin sinh viên">
                <p>Thông tin giảng viên</p>
            </a>
        </div>


        <div class="col-md-3 mb-3">
            <a href="@Url.Action("SelectCourseClass", "Grade")" class="menu-item">
                <img src="~/images/grade_manager.png" alt="Đăng ký học phần">
                <p>Quản lý điểm</p>
            </a>
        </div>


        <div class="col-md-3 mb-3">
            <a href="@Url.Action("Index", "Grade")" class="menu-item">
                <img src="~/images/see_class_list.png" alt="Kết quả học tập">
                <p>Xem danh sách lớp học</p>
            </a>
        </div>


        <div class="col-md-3 mb-3">
            <a href="@Url.Action("Timetable", "Student")" class="menu-item">
                <img src="~/images/timetable.png" alt="Thời khóa biểu">
                <p>Xem lịch dạy</p>
            </a>
        </div>
    </div>
</div>

<style>
    .menu-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-decoration: none;
        color: black;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: #f8f9fa;
    }

    .menu-item img {
        width: 80px;
        height: 80px;
    }

    .menu-item p {
        margin-top: 10px;
        font-weight: bold;
    }

    .menu-item:hover {
        background-color: #e2e6ea;
    }
</style>