@{
    ViewData["Title"] = "Trang chủ";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
</head>
<div class="custom-header-bar">
    <div class="left-text">
        <strong>Hệ:</strong> Đại học Chính quy&nbsp;&nbsp;
        <strong>NH:</strong> 2024-2025&nbsp;&nbsp;
        <strong>HK:</strong> 2
    </div>
    <div class="right-text">
        <span><strong>Tài khoản</strong> <a href="#" class="name">@ViewBag.TeacherName</a></span>
        <a href="@Url.Action("Logout", "Login")" title="Đăng xuất">
            <i class="fa-solid fa-power-off"></i>
        </a>
        <a href="@Url.Action("Index", "Teacher")" title="Đăng xuất">
            <i class="fa-solid fa-house"></i>
        </a>
        <i class="fa-solid fa-video"></i>
        <i class="fa-solid fa-question"></i>
        <i class="fa-solid fa-bell"></i>
    </div>
</div>
<div class="container mt-5">
    <div class="jumbotron bg-light rounded p-5">
        <h1 class="display-4 text-center mb-4">Hệ thống quản lý giảng viên</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="text-center mb-3">
                <span class="lead">Xin chào, @User.Identity.Name!</span>
                <a href="@Url.Action("Logout", "Login")" class="btn btn-danger ms-3">
                    <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                </a>
            </div>
        }
        <div class="row justify-content-center">
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Profile", "Teacher")" class="menu-card">
                    <img src="~/images/student_info.png" alt="Thông tin giang viên">
                    <p>Thông tin giảng viên</p>
                </a>
            </div>

            <div class="col-md-3 mb-4">
                <a href="@Url.Action("SelectCourseClass", "Grade")" class="menu-card">
                    <img src="~/images/grade_manager.png" alt="Quan ly diem">
                    <p>Quản lý điểm</p>
                </a>
            </div>

            <div class="col-md-3 mb-4">
                <a href="@Url.Action("SelectCourseClass", "Teacher")" class="menu-card">
                <img src="~/images/see_class_list.png" alt="Xem danh sach lop hoc">
                <p>Xem danh sách lớp học</p>
                </a>
            </div>

            <div class="col-md-3 mb-4">
                <a href="@Url.Action("TeachingSchedule", "Teacher")" class="menu-card">
                    <img src="~/images/timetable.png" alt="Xem lich day">
                    <p>Xem lịch dạy</p>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .custom-header-bar {
        background: linear-gradient(to right, #004080, #3a7ecc);
        color: white;
        padding: 10px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: 500;
        font-size: 15px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .custom-header-bar .left-text {
        white-space: nowrap;
        font-weight: 500;
    }

    .custom-header-bar .right-text {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .custom-header-bar .right-text span {
        font-weight: 500;
    }

    .custom-header-bar .right-text .name{
        color: #ebe5c8;
        text-decoration: underline;
        margin-left: 6px;
        font-weight: 600;
    }

    .custom-header-bar .right-text a,
    .custom-header-bar .right-text i {
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: color 0.2s;
        text-decoration: none;
    }

    .custom-header-bar .right-text a:hover,
    .custom-header-bar .right-text i:hover {
        color: #004080;
    }
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .jumbotron {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 40px;
    }

    .jumbotron h1 {
        color: #004080;
        font-weight: bold;
        font-size: 2rem;
    }

    .menu-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: #004080;
        border: 1px solid #004080;
        border-radius: 10px;
        padding: 20px;
        background-color: #ffffff;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out, background-color 0.3s;
        height: 170px;
    }

    .menu-card img {
        max-width: 60px;
        margin-bottom: 12px;
    }

    .menu-card p {
        font-weight: 600;
        text-align: center;
        margin: 0;
    }

    .menu-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 18px rgba(0, 64, 128, 0.2);
        background-color: #e6f0ff;
    }

    .btn-danger {
        border-radius: 6px;
        background-color: #cc0000;
        border-color: #cc0000;
        font-weight: 600;
    }

    .btn-danger:hover {
        background-color: #990000;
        border-color: #990000;
    }

    .lead {
        font-weight: 400;
        color: #333;
    }

</style>
