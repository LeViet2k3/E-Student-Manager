@model StudentApp.Models.Teacher

@{
    ViewData["Title"] = "Thông tin giảng viên";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-white text-dark text-center rounded-top-4 border-bottom">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                    }

                    <form asp-action="UpdateProfile" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Mã giảng viên</label>
                            <input asp-for="MaGV" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ tên</label>
                            <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên..." />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Số điện thoại</label>
                            <input asp-for="SDT" class="form-control" placeholder="Nhập số điện thoại..." />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Khoa</label>
                            <input asp-for="Khoa" class="form-control" placeholder="Tên khoa giảng dạy..." />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4 rounded-pill">Lưu thay đổi</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
