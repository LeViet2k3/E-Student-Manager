@model StudentApp.Models.Teacher

@{
    ViewData["Title"] = "Thông tin giảng viên";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
</head>
<div class="custom-header-bar">
    <div class="left-text">
        <strong>Hệ:</strong> Đại học Chính quy&nbsp;&nbsp;
        <strong>NH:</strong> 2024-2025&nbsp;&nbsp;
        <strong>HK:</strong> 2
    </div>
    <div class="right-text">
        <span><strong>Tài khoản</strong> <a href="#" class="name">@ViewBag.StudentName</a></span>
        <a href="@Url.Action("Logout", "Login")" title="Đăng xuất">
            <i class="fa-solid fa-power-off"></i>
        </a>
        <a href="@Url.Action("Index", "Teacher")" title="Đăng xuất">
            <i class="fa-solid fa-house"></i>
        </a>
        <i class="fa-solid fa-video"></i>
        <i class="fa-solid fa-question"></i>
        <i class="fa-solid fa-bell"></i>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4 border-0">
                <!-- Cập nhật màu header giống header chính -->
                <div class="card-header text-white text-center rounded-top-4 border-bottom"
                     style="background: linear-gradient(to right, #004080, #3a7ecc);">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                    }

                    <form asp-action="UpdateProfile" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Mã giảng viên</label>
                            <input asp-for="MaGV" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ tên</label>
                            <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên..." />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Số điện thoại</label>
                            <input asp-for="SDT" class="form-control" placeholder="Nhập số điện thoại..." />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Khoa</label>
                            <input asp-for="Khoa" class="form-control" placeholder="Tên khoa giảng dạy..." />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4 rounded-pill">Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .custom-header-bar {
        background: linear-gradient(to right, #004080, #3a7ecc);
        color: white;
        padding: 10px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: 500;
        font-size: 15px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .custom-header-bar .left-text {
        white-space: nowrap;
        font-weight: 500;
    }

    .custom-header-bar .right-text {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .custom-header-bar .right-text span {
        font-weight: 500;
    }

    .custom-header-bar .right-text .name{
        color: #ebe5c8;
        text-decoration: underline;
        margin-left: 6px;
        font-weight: 600;
    }

    .custom-header-bar .right-text a,
    .custom-header-bar .right-text i {
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: color 0.2s;
        text-decoration: none;
    }

    .custom-header-bar .right-text a:hover,
    .custom-header-bar .right-text i:hover {
        color: #004080;
    }
</style>
