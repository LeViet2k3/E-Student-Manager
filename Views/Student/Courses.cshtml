@model List<StudentApp.Models.Course>

<h2>Danh sách khóa học</h2>
<table class="table">
    <thead>
        <tr>
            <th>Tên khóa học</th>
            <th>Mô tả</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
                <tr>
                    <td>@course.Name</td>
                    <td>@course.Description</td>
                    <td>
                        <a href="/Student/RegisterCourse?courseId=@course.CourseId" class="btn btn-primary">Đăng ký</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
