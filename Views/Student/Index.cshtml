@model Student
@{
    ViewData["Title"] = "Student Page";
    var student = Model;
    var departments = ViewBag.Departments as List<Department> ?? [];
}

<div class="container">
    <h1 class="text-center display-4">Student Information</h1>

    @if (student != null)
    {
        <table class="mt-4 table table-bordered text-center">
            <tr>
                <th>ID</th>
                <td>@student.Id</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>@student.Code</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@student.Name</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>@student.Birthday.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>@student.Address</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>@student.Department?.Name</td>
            </tr>
        </table>

        <div class="text-center mt-3">
            <a class="btn btn-success" href="/Student/Update?id=@student.Id">Update</a>
            <a class="btn btn-danger" href="/Student/Delete?id=@student.Id"
                onclick="return confirm('Are you sure?')">Delete</a>
        </div>
    }
    else
    {
        <p class="text-danger text-center">No student information found.</p>
    }
</div>
