@model StudentApp.Models.Student
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<h2>Thông tin cá nhân</h2>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

<form method="post">
    <input type="hidden" asp-for="MaSV" />

    <div class="form-group">
        <label>Mã sinh viên</label>
        <input asp-for="MaSV" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="HoTen" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngày sinh</label>
        <input asp-for="NgaySinh" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Giới tính</label>
        <select asp-for="GioiTinh" class="form-control">
            <option>Nam</option>
            <option>Nữ</option>
        </select>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Số điện thoại</label>
        <input asp-for="SDT" class="form-control" />
    </div>

    <div class="form-group">
        <label>Địa chỉ</label>
        <input asp-for="DiaChi" class="form-control" />
    </div>

    <div class="form-group">
        <label>Khoa</label>
        <input asp-for="Khoa" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngành</label>
        <input asp-for="Nganh" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Lưu thông tin</button>
</form>
