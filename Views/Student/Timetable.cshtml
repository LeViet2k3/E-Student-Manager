@model List<StudentApp.Models.CourseRegistration>
@{
    ViewData["Title"] = "Timetable";
    var years = ViewBag.Years as List<string>;
}

<h2>Thời Khóa Biểu</h2>

<form method="get" class="form-inline mb-4">
    <div class="form-group">
        <label for="hocKy">Kỳ học:</label>
        <select name="hocKy" class="form-control mx-2">
                <option value="">--Chọn kỳ--</option>
                <option value="1">Kỳ 1</option>
                <option value="2">Kỳ 2</option>
        </select>
    </div>

    <div class="form-group">
        <label for="namHoc">Năm học:</label>
        <select name="namHoc" class="form-control mx-2">
            <option value="">-- Chọn năm --</option>
            @foreach (var y in years)
            {
                <option value="@y">@y</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Xem kết quả</button>
</form>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Tên học phần</th>
                <th>Thứ</th>
                <th>Tiết</th>
                <th>Phòng học</th>
                <th>Kỳ học</th>
                <th>Năm học</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CourseClasses.Course.TenHP</td>
                    <td>@item.CourseClasses.Thu</td>
                    <td>@item.CourseClasses.Tiet</td>
                    <td>@item.CourseClasses.PhongHoc</td>
                    <td>@item.CourseClasses.Course.KiHoc</td>
                    <td>@item.CourseClasses.Course.NamHoc</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model != null)
{
    <p class="text-danger">Không tìm thấy dữ liệu.</p>
}
