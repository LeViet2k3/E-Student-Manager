@model IEnumerable<dynamic>
@{
    var maLHP = ViewBag.MaLHP as string;
}
<h2>Danh sách sinh viên đăng ký</h2>
<table class="table">
    <thead>
        <tr>
            <th>Mã SV</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Điểm QT</th>
            <th>Điểm Thi</th>
            <th>Điểm Tổng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Student.MaSV</td>
                <td>@item.Student.HoTen</td>
                <td>@item.Student.Email</td>
                <td>@item.Grade?.DiemQT</td>
                <td>@item.Grade?.DiemThi</td>
                <td>@item.Grade?.DiemTong</td>
                <td>
                    <a asp-action="ThemDiem" asp-route-maSV="@item.Student.MaSV" asp-route-maLHP="@maLHP" class="btn btn-success">Nhập điểm</a>
                </td>
            </tr>
        }
    </tbody>
</table>
