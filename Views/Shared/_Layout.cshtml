<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentApp.styles.css" asp-append-version="true" />
</head>

<body>
<header class="custom-header">
    <div class="header-content">
        <img src="/images/logo.webp" alt="Logo" class="header-logo" />
        <div class="header-text">
            <h3 class="faculty">HỆ THỐNG QUẢN LÝ HỌC TẬP</h3>
            <h5 class="system">Nâng Cao Hiệu Quả Giảng Dạy Và Học Tập</h5>
        </div>

    </div>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
