@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center mb-4">Đăng nhập</h2>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mb-3">@ViewBag.Error</div>
                }

                <form method="post" asp-action="Login">
                    <div class="mb-3">
                        <label for="code" class="form-label">Mã đăng nhập:</label>
                        <input type="text" name="code" class="form-control" id="code" required placeholder="Nhập mã đăng nhập">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" name="email" class="form-control" id="email" required placeholder="Nhập địa chỉ email">
                    </div>
                    <div class="mb-3">
                        <label for="role" class="form-label">Vai trò:</label>
                        <select name="role" class="form-select" id="role">
                            <option value="Student" selected>Sinh viên</option>
                            <option value="Teacher">Giảng viên</option>
                        </select>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                    </div>
                    <div class="mt-3 text-center">
                        <a href="#" class="text-muted">Quên mật khẩu?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
    }

    .btn-primary {
        border-radius: 4px;
        background-color: #007bff; /* Màu xanh dương chủ đạo */
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }
</style>